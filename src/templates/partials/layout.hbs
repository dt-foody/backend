            <td align="center" style="padding:40px 20px;">
                <table role="presentation"
                    style="max-width:600px;width:100%;background:#ffffff;border-radius:8px;overflow:hidden;box-shadow:0 2px 8px rgba(0,0,0,0.1);">

                    {{> header}}

